<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_height="520dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:orientation="vertical"
        android:background="@drawable/grapefinal"



        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="260dp"
            android:layout_gravity="center"
            android:layout_height="350dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            app:srcCompat="@drawable/czwarta" />

        <TextView
            android:id="@+id/textImie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/colorTekstuModelek"
            android:textStyle="bold"
            android:text="TextView" />


        <TextView
            android:id="@+id/textNazwisko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textImie"
            android:layout_below="@+id/textImie"
            android:layout_gravity="center"
            android:textColor="@color/colorTekstuModelek"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textOcena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textWiek"
            android:layout_below="@+id/textWiek"
            android:layout_gravity="center"
            android:textColor="@color/colorTekstuModelek"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Twoja ocena: "
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/finalRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="10"
            android:layout_marginTop="10dp"

            android:rating="0"
            android:stepSize="1" />

    </LinearLayout>
</android.support.v7.widget.CardView>
